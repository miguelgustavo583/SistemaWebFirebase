<div class="container mt-4">
    <h2>Lista de Agendamentos</h2>
    {{#if agendamentos.length}}
    <table class="table table-bordered table-striped mt-3">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Telefone</th>
                <th>Origem</th>
                <th>Data de Contato</th>
                <th>Observação</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            {{#each agendamentos}}
            <tr>
                <td>{{this.nome}}</td>
                <td>{{this.telefone}}</td>
                <td>{{this.origem}}</td>
                <td>{{formatDate this.data_contato}}</td>
                <td>{{this.observacao}}</td>
                <td>
                    <a href="/editar/{{this.id}}" class="btn btn-warning btn-sm">Editar</a>
                    <form action="/deletar/{{this.id}}" method="POST" style="display:inline-block;">
                        <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <p>Nenhum agendamento encontrado.</p>
    {{/if}}
</div>
